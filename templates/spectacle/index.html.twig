{% extends 'layout_admin.html.twig' %}

{% block title %}Spectacle{% endblock %}

{% block body %}
    <h1 class="m-5">Spectacle</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Date</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spectacle in spectacles %}
            <tr>
                <td>{{ spectacle.id }}</td>
                <td>{{ spectacle.name }}</td>
                <td>{{ spectacle.description }}</td>
                <td>{{ spectacle.image }}</td>
                <td>{{ spectacle.date ? spectacle.date|date('Y-m-d') : '' }}</td>
                <td>{{ spectacle.price }}</td>
                <td>
                    <button class="mb-2 btn btn-secondary">
                    <a href="{{ path('spectacle_show', {'id': spectacle.id}) }}">Aperçu</a>
                    </button>

                    <button class="mb-2 btn btn-secondary">
                    <a href="{{ path('spectacle_edit', {'id': spectacle.id}) }}">Éditer</a>
                    </button>

                    {{ include('spectacle/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="m-5 btn btn-secondary">
        <a href="{{ path('admin_index') }}">back to list</a>
    </button>


    <button class="m-5 btn btn-secondary">
        <a href="{{ path('spectacle_new') }}">Create new</a>
    </button>
{% endblock %}
